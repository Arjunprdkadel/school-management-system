  <div class="row">
    <h1 class="text-center display-1 bg-info">ADD TEACHERS DATAS</h1>
    <div class="col-6 p-3">
      <form action="/addTcher" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="image" class="form-label">Teacher's Image:</label>
          <input type="file" class="form-control" id="image" placeholder="Upload Image" name="image">
        </div>
        <div class="mb-3 mt-3">
          <label for="Name" class="form-label">Teacher's Name:</label>
          <input type="text" class="form-control" id="name" placeholder="Teacher's Name" name="name">
        </div>
        <div class="mb-3">
          <label for="degree" class="form-label">Qualification:</label>
          <input type="text" class="form-control" id="degree" placeholder="Qualification" name="degree">
        </div>
        <div class="mb-3">
          <label for="dob" class="form-label">Joining Date:</label>
          <input type="text" class="form-control" id="dob" placeholder="Joining Date" name="dob">
        </div>
      </div>

        <div class="col-6 mt-3">
        <div class="mb-3">
          <label for="classes" class="form-label">Attending classes(th):</label>
          <input type="text" class="form-control" id="classes" placeholder="Attending classes" name="classes">
        </div>
        <div class="mb-3">
          <label for="contact" class="form-label">contact:</label>
          <input type="text" class="form-control" id="contact" placeholder="contact" name="contact">
        </div>
        <div class="mb-3">
          <label for="address" class="form-label">Address:</label>
          <input type="text" class="form-control" id="address" placeholder="address" name="address">
        </div> 
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
